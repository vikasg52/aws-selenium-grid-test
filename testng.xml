<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="All Test Suite" verbose="1" parallel="methods" thread-count="3">

    <!-- Parameters available in your tests -->
    <parameter name="browser" value="chrome"/>
    <!-- optional: pass grid URL from env (falls back in code if not set) -->
    <parameter name="gridUrl" value="${GRID_URL}"/>

    <test name="Google Tests" verbose="2">
        <classes>
            <class name="tests.GoogleTitleTest">
                <methods>
                    <include name="googleTitleShouldContainGoogle"/>
                    <!-- Remove or fix these if they don't exist in the class -->
                    <include name="googleTitleShouldContainGoogl1e"/>
                    <include name="googleTitleShouldContainGoogle2"/>
                    <include name="googleTitleShouldContainGoogl3e"/>
                    <include name="googleTitleShouldContainGoogle4"/>
                    <include name="googleTitleShouldContainGoogle5"/>
                    <include name="googleTitleShouldContainGoogle6"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>
